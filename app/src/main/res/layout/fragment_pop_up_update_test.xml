<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context=".fragment.PopUpCreateGroupFragment">


    <EditText
        android:id="@+id/update_subject"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#30171212"
        android:layout_marginTop="4dp"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:drawableLeft="@drawable/ic_registration_subject"
        android:hint="Enter subject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/update_theme"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:padding="8dp"
        android:background="#30171212"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/ic_topic"
        android:hint="Enter theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/update_subject" />

    <Button
        android:id="@+id/update_test_btn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/myButtonColor"
        android:text="Update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/update_theme" />

</androidx.constraintlayout.widget.ConstraintLayout>